        target.style.removeProperty('padding-top');
        target.style.removeProperty('padding-bottom');
        target.style.removeProperty('margin-top');
        target.style.removeProperty('margin-bottom');
        window.setTimeout( () => {
        target.style.removeProperty('height');
        target.style.removeProperty('overflow');
        target.style.removeProperty('transition-duration');
        target.style.removeProperty('transition-property');
        }, duration);
    }

    // Attach click event listeners to Detail items
    detailItems.forEach(function(item) {
        item.addEventListener('click', function() {    

            setTimeout(function () {
                var targetPosition = item.getBoundingClientRect().top + window.scrollY;

                window.scrollTo({
                top: targetPosition,
                behavior: 'smooth'
                });
            }, 900);

            var selector = item.id        
            
            // Get all elements with classname which is the same as selector ID
            var target = document.querySelectorAll("." + selector);

            // If item is closed, open it, and drop down the content
            if (item.classList.contains("details__tabs__item--mob--closed")) {
                item.classList.remove('details__tabs__item--mob--closed');
                item.classList.add('details__tabs__item--mob--open');
                slideDown(target[0],600);
            } else {
                // if its open, clear the selector variable
                selector = ''
            }

            // close all content sections that don't have the selector class
            detailItems.forEach(function(detailsItem) {
                if (detailsItem.id != selector) {
                    var close = document.querySelectorAll("." + detailsItem.id);
                    detailsItem.classList.remove('details__tabs__item--mob--open');
                    detailsItem.classList.add('details__tabs__item--mob--closed');
                    slideUp(close[0],600)
                }
            });
        });
    });
});

