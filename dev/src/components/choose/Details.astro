<script>
    // DETAILS DESKTOP TABS
    function openTab(evt, tab) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("details__content");

        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }

        tablinks = document.getElementsByClassName("details__tabs__item");

        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }

        document.getElementById(tab).style.display = "block";
        evt.currentTarget.className += " active";
    }

    document.addEventListener("DOMContentLoaded", function() {        
        var detailTabs = document.querySelectorAll('.details__tabs__item');
        detailTabs.forEach(function(tab) {
            tab.addEventListener('click', function() {
                var selector = this.dataset.selector;
                openTab(event,selector)
            });
        });
    });
