---
const { urgency } = Astro.props
---

<style>
/*URGENCY*/
.urgency {
    background-color: #195D7A;
    /*height: 115px;*/
}

@media (min-width:768px){
    .urgency {
        height: 295px;
        padding-top: 10px;
    }
}

.urgency__h2 {
    font-family: 'Lato', sans-serif;
    line-height: 37px;
    font-size: 31px;
    color: rgb(196, 166, 133);
    font-weight: 400;
    margin: 20px 0;
    text-align: center;
}

.urgency__h2 img {
    vertical-align: unset;
}

.urgency__h2 img:first-child {
    margin-right: 20px;
    animation-name: tadda;
    -webkit-animation-name: tadda;
    animation-duration: 1s;
    -webkit-animation-duration: 1s;
    animation-iteration-count: infinite;
    -webkit-animation-iteration-count: infinite;
}

.urgency__h2 img:last-child {
    margin-left: 20px;
    animation-name: taddaR;
    -webkit-animation-name: taddaR;
    animation-duration: 1s;
    -webkit-animation-duration: 1s;
    animation-iteration-count: infinite;
    -webkit-animation-iteration-count: infinite;
}

@media (min-width:768px){
    .urgency__h2 {
        font-size: 26px;
        line-height: 31px;
        margin: 30px 0;
    }
}

@-webkit-keyframes tadda {
    0% {
        -webkit-transform: translateX(0px);
        transform: translateX(0px);
    }
    50% {
        -webkit-transform: translateX(15px);
        transform: translateX(15px);
    }
    100% {
        -webkit-transform: translateX(0px);
        transform: translateX(0px);
    }
}

@keyframes tadda {
    0% {
        -webkit-transform: translateX(0px);
        transform: translateX(0px);
    }
    50% {
        -webkit-transform: translateX(15px);
        transform: translateX(15px);
    }
    100% {
        -webkit-transform: translateX(0px);
        transform: translateX(0px);
    }
}

@-webkit-keyframes taddaR {
    0% {
        -webkit-transform: translateX(0px);
        transform: translateX(0px);
    }
    50% {
        -webkit-transform: translateX(-15px);
        transform: translateX(-15px);
    }
    100% {
        -webkit-transform: translateX(0px);
        transform: translateX(0px);
    }
}

@keyframes taddaR {
    0% {
        -webkit-transform: translateX(0px);
        transform: translateX(0px);
    }
    50% {
        -webkit-transform: translateX(-15px);
        transform: translateX(-15px);
    }
    100% {
        -webkit-transform: translateX(0px);
        transform: translateX(0px);
    }
}

/*END URGENCY*/    
</style>

<!-- URGENCY -->
        
        <section class="urgency">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <h2 class="urgency__h2" style="color:#FFFFFF !important; margin: 15px !important;">
                            <img class="hidden-xs"
                            src="https://sun-coast-sciences.imgix.net/left-arrow.png?fit=max&auto=format&w=36&h=18"
                            alt="Left"
                            loading="lazy">
                            <div style="display: inline-block;">{urgency.text}
                            </div>
                            <img class="hidden-xs"
                            src="https://sun-coast-sciences.imgix.net/right-arrow.png?fit=max&auto=format&w=36&h=18"
                            alt="Right"
                            loading="lazy">
                        </h2>
                    </div>
                </div>
            </div>
        </section>
        
