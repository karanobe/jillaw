---
const {banner}  = Astro.props;
---
{ (banner.enabled == true) &&
<style>
    .special-banner {
        background-color: rgb(255, 1, 1);
    }

    .special-banner h1 {
        color: #fff;
        font-size: 30px;
        line-height: 36px;
        font-weight: 700;
        margin: 20px 0;
    }

    @media (min-width:768px) {
        .special-banner h1 {
            margin: 23px 0;
        }
    }    
</style>

<section class="special-banner">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="text-center">{banner.text}</h1>
            </div>
        </div>
    </div>
</section>
}